<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:text="独生子女状况："/>
            <TextView
                android:id="@+id/dushengzinv"
                android:tag="ddlOnlyChildType"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:drawableRight="@drawable/ep"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/editbig2"
                android:layout_marginBottom="@dimen/editbig2"
                android:background="@drawable/bg_tv"
                android:gravity="center"
                android:text="－请选择－"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:text="是否受过学前教育："/>
            <TextView
                android:id="@+id/shifoushouguoxqjy"
                android:tag="ddlIfPreStudy"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:drawableRight="@drawable/ep"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/editbig2"
                android:layout_marginBottom="@dimen/editbig2"
                android:background="@drawable/bg_tv"
                android:gravity="center"
                android:text="－请选择－"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"

                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"

                android:text="外语语种："/>
            <TextView
                android:id="@+id/foreign"
                android:tag="ddlForeignLanguage"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:drawableRight="@drawable/ep"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/editbig2"
                android:layout_marginBottom="@dimen/editbig2"
                android:background="@drawable/bg_tv"
                android:gravity="center"
                android:text="－请选择－"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingTop="15dp"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"
                android:text="上下学方式："/>
            <TextView
                android:id="@+id/shangxiaxue"
                android:tag="ddlTransType"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:drawableRight="@drawable/ep"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/editbig2"
                android:layout_marginBottom="@dimen/editbig2"
                android:background="@drawable/bg_tv"
                android:gravity="center"
                android:text="－请选择－"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:gravity="center"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:text="学生联系电话："/>
            <EditText
                android:id="@+id/phone"
                android:tag="tbxStuPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="@dimen/editbig2"
                android:layout_marginTop="@dimen/editbig2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:text="学生通信地址："/>
            <EditText
                android:id="@+id/addr"
                android:tag="tbxCommAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="@dimen/editbig2"
                android:layout_marginTop="@dimen/editbig2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:gravity="center"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:layout_weight="1.5"
                android:textColor="@color/textcolor"
                android:text="邮政编码："/>
            <EditText
                android:id="@+id/yb"
                android:tag="tbxZipCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="@dimen/editbig2"
                android:layout_marginTop="@dimen/editbig2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearheightbig"
            android:gravity="center"
            android:background="@drawable/linearlayout_boder1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/textcolor"
                android:text="备注："/>
            <EditText
                android:id="@+id/bz"
                android:tag="taRemark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_edittext"
                android:layout_marginBottom="@dimen/editbig2"
                android:layout_marginTop="@dimen/editbig2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:text=""/>
        </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/next"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"></com.gc.materialdesign.views.ButtonRectangle>
        <View
            android:id="@+id/vMasker"
            android:background="#e0000000"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_height="100dp"/>
    </LinearLayout>

</ScrollView>
